{
  "name": "monkmaze_backend",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --signal SIGTERM --delay 1500 src/server.js",
    "dev:clean": "npx kill-port 5000 5001 5002 && npm run dev",
    "dev:windows": "powershell -Command \"Stop-Process -Id (Get-NetTCPConnection -LocalPort 5000).OwningProcess -Force; nodemon src/server.js\"",
    "kill": "npx kill-port 5000 5001 5002 3000 3001",
    "vercel-build": "echo 'No build step needed'"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.3",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^7.0.0",
    "mongoose": "^8.19.2",
    "multer": "^2.0.2",
    "nodemon": "^3.1.10",
    "serverless-http": "^4.0.0"
  },
  "devDependencies": {
    "kill-port": "^2.0.1"
  },
  "engines": {
    "node": ">=18"
  }
}